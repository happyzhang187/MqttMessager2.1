<?xml version="1.0" encoding="utf-8"?>
<layout>
    <RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:custom="http://schemas.android.com/apk/res/com.example.guston.signup2"
        android:id="@+id/sign_up"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/RiceColor">




        <com.example.guston.signup2.TestView
            android:id="@+id/background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <TextView
            android:id="@+id/signup_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign up"

            android:textSize="30dp"
            android:layout_centerVertical="true"
            android:textColor="@color/RiceColor"
            android:elevation="8dp"
            android:layout_marginLeft="80dp"/>

        <TextView
            android:id="@+id/login_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login"
            android:textSize="30dp"
            android:layout_centerVertical="true"
            android:textColor="@color/leftcolor"
            android:layout_alignParentRight="true"
            android:layout_marginRight="45dp"/>

        <EditText
            android:id="@+id/editsignup"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:textSize="16dp"
           android:paddingLeft="15dp"
            android:layout_centerVertical="true"
            android:layout_margin="50dp"
            android:background="@drawable/ovalstyle"
            android:hint="PhoneNumber"
              android:inputType="number"
            android:maxLines="1"
            android:singleLine="true"

            android:alpha="0"
            android:visibility="gone"
            />
<com.hbb20.CountryCodePicker
    android:id="@+id/country_picker"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_above="@+id/editsignup"
    android:layout_alignLeft="@id/editsignup"
    android:alpha="0"
    />

<TextView
    android:id="@+id/waiting_line"
    android:layout_width="100dp"
    android:layout_height="5dp"


    android:layout_alignParentBottom="true"
    android:layout_marginBottom="50dp"
    android:layout_centerHorizontal="true"
android:background="@drawable/waiting_line"
    android:alpha="0"
    />
<Button
    android:id="@+id/next_btn"
    android:layout_width="100dp"
    android:layout_height="30dp"
    style="@style/next_btn_style"

    android:layout_centerHorizontal="true"
    android:layout_alignParentBottom="true"
    android:layout_marginBottom="50dp"
    android:alpha="0"
    android:visibility="gone"/>

        <TextView
            android:id="@+id/next_text"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:textSize="20sp"
            android:text="@string/next"
            android:layout_centerHorizontal="true"
            android:layout_alignBottom="@id/next_btn"
            android:textColor="@color/RiceColor"
            android:alpha="0"
            />
    <ProgressBar
        android:id="@+id/next_process"
        android:layout_width="30dp"
        android:layout_height="30dp"
       android:layout_centerHorizontal="true"

        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:alpha="0"/>



        <View
            android:id="@+id/the_base_view"
            android:layout_width="20dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"/>
        <EditText
            android:id="@+id/code_inputer_3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_toRightOf="@id/the_base_view"
            android:layout_centerVertical="true"
           android:background="@drawable/code_inputer"
            android:alpha="0"
            android:visibility="gone"
            android:inputType="number"
            android:maxLength="1"
            android:textAlignment="center"
            android:textColor="@color/RiceColor"
            android:textSize="20dp"/>
        <EditText
            android:id="@+id/code_inputer_2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_toLeftOf="@id/the_base_view"
            android:layout_centerVertical="true"
            android:background="@drawable/code_inputer"
            android:alpha="0"
            android:visibility="gone"
            android:inputType="number"
            android:maxLength="1"
            android:textAlignment="center"
            android:textColor="@color/RiceColor"
            android:textSize="20dp"/>
        <EditText
            android:id="@+id/code_inputer_1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_toLeftOf="@id/code_inputer_2"
            android:layout_centerVertical="true"
          android:layout_marginRight="20dp"
            android:background="@drawable/code_inputer"
            android:alpha="0"
            android:visibility="gone"
            android:inputType="number"
            android:maxLength="1"
            android:textAlignment="center"
            android:textColor="@color/RiceColor"
            android:textSize="20dp"/>
        <EditText
            android:id="@+id/code_inputer_4"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_toRightOf="@id/code_inputer_3"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:background="@drawable/code_inputer"
            android:alpha="0"
            android:visibility="gone"
            android:inputType="number"
            android:maxLength="1"
            android:textAlignment="center"
            android:textColor="@color/RiceColor"
            android:textSize="20dp"/>
        <View
            android:id="@+id/reveal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/RiceColor"
            android:visibility="invisible"
            />

        <EditText
            android:id="@+id/edit_password"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:textSize="16dp"
            android:paddingLeft="8dp"
            android:layout_centerVertical="true"
            android:layout_margin="50dp"
            android:background="@drawable/ovalstyleforpassword"
            android:hint="Passward"

            android:inputType="number"
            android:maxLines="1"
            android:singleLine="true"

            android:alpha="1"
            android:visibility="gone"/>



        <com.skydoves.colorpickerview.ColorPickerView
            android:id="@+id/color_selector"
            android:layout_width="300dp"
            android:layout_height="300dp"
            app:palette="@drawable/palette"
            app:selector="@drawable/wheel"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:visibility="gone"

            >


        </com.skydoves.colorpickerview.ColorPickerView>

        <View
            android:id="@+id/view_toshowtheselectedcolor"
            android:layout_marginTop="50dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/circle"
            android:visibility="gone"

            />
        <Button
            android:id="@+id/next_btn_color_selector"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:background="@drawable/next_btn_notrice"


            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="50dp"
            android:alpha="0"
            android:visibility="gone"/>



        <View
            android:id="@+id/the_base_view1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"/>









          <View
              android:id="@+id/squareShape"
              android:layout_width="45dp"
              android:layout_height="45dp"
              android:background="@drawable/profile_shape_square"
              android:layout_toLeftOf="@id/the_base_view1"
              android:layout_alignBottom="@id/the_base_view1"
              android:layout_marginBottom="50dp"
              android:visibility="gone"
              android:alpha="0"

              />
          <View
              android:id="@+id/circleShape"
              android:layout_width="45dp"
              android:layout_height="45dp"
              android:background="@drawable/profile_shape_circle"
              android:layout_toRightOf="@id/the_base_view1"
              android:layout_alignBottom="@id/the_base_view1"
              android:layout_marginBottom="50dp"
              android:visibility="gone"
              android:alpha="0"/>
        <View
            android:id="@+id/smoothsquareShape"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@drawable/profile_shape_smoothsquare"
            android:layout_alignTop="@id/the_base_view1"
            android:layout_marginTop="50dp"
            android:layout_centerHorizontal="true"
            android:visibility="gone"
            android:alpha="0"/>
        <View
            android:id="@+id/diamoneShape"
            android:layout_width="50dp"
           android:layout_height="50dp"
            android:background="@drawable/profile_shape_diamond"
            android:layout_alignTop="@id/smoothsquareShape"
            android:layout_toLeftOf="@id/smoothsquareShape"
            android:layout_marginRight="50dp"

            android:visibility="gone"
            android:alpha="0"/>
        <View
            android:id="@+id/triangleShape"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:background="@drawable/profile_shape_triangle"
            android:layout_alignTop="@id/smoothsquareShape"
            android:layout_toRightOf="@id/smoothsquareShape"
            android:layout_marginLeft="50dp"
            android:visibility="gone"
            android:alpha="0"/>

        <Button
            android:id="@+id/next_btn_shape_selector"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:background="@drawable/next_btn_notrice"


            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="50dp"
            android:alpha="1"
            android:visibility="gone"/>

        <Button
            android:id="@+id/next_btn_after_password"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:background="@drawable/next_btn_notrice"


            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="50dp"
            android:alpha="1"
            android:visibility="gone"/>

        <EditText
            android:id="@+id/login_account"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:textSize="16dp"
            android:paddingLeft="8dp"
            android:layout_marginTop="200dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:background="@drawable/ovalstylelogin"
            android:hint="account"

            android:inputType="number"
            android:maxLines="1"
            android:singleLine="true"

            android:alpha="1"
            android:visibility="gone" />

        <EditText
            android:id="@+id/login_password"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:textSize="16dp"
            android:paddingLeft="8dp"

            android:layout_marginTop="280dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:background="@drawable/ovalstylelogin"
            android:hint="Password"

            android:inputType="number"
            android:maxLines="1"
            android:singleLine="true"

            android:alpha="1"
            android:visibility="gone" />

        <Button
            android:id="@+id/final_login"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:background="@drawable/final_login_btn"


            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="50dp"
            android:alpha="1"
            android:textColor="@color/RiceColor"
            android:text="GO!"
            android:visibility="gone"
             />



    </RelativeLayout>



</layout>
